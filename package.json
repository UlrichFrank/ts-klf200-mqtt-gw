{
  "name": "ts-klf200-mqtt-gw",
  "version": "0.1.0",
  "description": "Velux KLF200 MQTT gateway",
  "type": "commonjs",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "coverage": "nyc npm test",
    "start": "node --inspect=5858 -r ts-node/register ./dist/main.js",
    "clean": "rm -rf dist",
    "reinstall": "npm run clean && npm install",
    "rebuild": "npm run clean && npm install && npm run build",
    "jest": "node --expose-gc node_modules/jest/bin/jest.js",
    "jest-debug": "node --expose-gcgit --inspect-brk node_modules/jest/bin/jest.js"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.+(ts|tsx|js)",
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ulrichfrank/klf-200-api-service"
  },
  "keywords": [
    "velux",
    "klf200",
    "node",
    "mqtt"
  ],
  "author": "Ulrich Frank",
  "license": "ISC",
  "dependencies": {
    "@types/dotenv-defaults": "^2.0.0",
    "@types/express": "^4.17.11",
    "@ulrichfrank/ts-mqtt-gateway": "^0.1.4",
    "async-wait-until": "^2.0.7",
    "dotenv-defaults": "^2.0.1",
    "express": "^4.17.1",
    "klf-200-api": "^3.0.4",
    "mqtt": "^4.2.6",
    "node": "^16.1.0",
    "reflect-metadata": "^0.1.13",
    "ts-event-bus": "^3.0.0",
    "ts-node": "^9.1.1",
    "typescript-collections": "^1.3.3",
    "typescript-logging": "^1.0.0",
    "velux-klf200-api": "^0.1.6"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/node": "^15.6.0",
    "jest": "^26.6.3",
    "npm-run-all": "^4.1.5",
    "testcontainers": "^7.10.0",
    "ts-jest": "^26.5.6",
    "typescript": "^4.2.4"
  }
}
